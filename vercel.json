{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/pagarme",
      "dest": "/api/pagarme.js"
    },
    {
      "src": "/api/generate-card-hash",
      "dest": "/api/generate-card-hash.js"
    },
    {
      "src": "/api/pix-details",
      "dest": "/api/pix-details.js"
    },
    {
      "src": "/api/qr-image",
      "dest": "/api/qr-image.js"
    },
    {
      "src": "/api/pagarme-webhook",
      "dest": "/api/pagarme-webhook.js"
    }
  ]
}